<div class="container-fluid container_sign_up px-0 mx-0">
  <div class="row row_sign">
    <div class="col-lg-4 col-11 col_form">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h2>忘記密碼</h2>
        <hr class="colorgraph"> <!---- 我是線 ---->
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "label_form" %><br />
          <%= f.email_field :email,class: "input_form", autofocus: true, autocomplete: "email" %>
        </div><br>
        <hr class="colorgraph"> <!---- 我是線 ---->
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn_send" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

