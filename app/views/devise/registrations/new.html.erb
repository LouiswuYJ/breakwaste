<!--- 會員註冊 Sign Up --->
<%= render "devise/shared/error_messages", resource: resource %>
<div class="container-fluid container_sign_up px-0 mx-0">
  <div class="row no-gutters row_sign">
    <div class="col-lg-4 col-11 col_form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>註冊會員</h2>
        <hr class="colorgraph"> <!---- 我是線 ---->

        <div class="form-group">
          <%= f.label :email, class: "label_form" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form" %>
        </div>

        <div class="form-group">
          <%= f.label :password,'密碼: ', class: "label_form" %>
          <% if @minimum_password_length %>
            <em>(至少輸入<%= @minimum_password_length %>個字元)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input_form" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, '密碼確認: ', class: "label_form" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_form" %>
        </div>
        <div class="recaptcha">
          <%= recaptcha_tags site_key: ENV["RECAPTCHA_V2_CHECKBOX_SITE_KEY"] %>
        </div>
        <hr class="colorgraph"> <!---- 我是線 ---->    
        <div class="actions">
          <%= f.submit "註冊會員" , class: 'sign_up'%>
        </div>
      <% end %>   
      <%= render "devise/shared/links" %>  
    </div>
  </div>
</div>
