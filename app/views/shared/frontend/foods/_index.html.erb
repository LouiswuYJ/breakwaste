<div class="section_foods_index">
  <div class="container-fluid container_list p-0">

    <% flash.each do |key, value| %>
        <div class="alert alert-warning <%= key %>">
          <%= value %>
        </div>
    <% end %>

<style type="text/css">
.row_list{margin:auto; width:85%;padding:20px 0 100px 0;}
.row_list .col_list{ margin-top: 20px;margin-left: 20px; width: calc((100% - 40px) / 3); }
.row_list .col_list:nth-child(3n+1){ margin-left: 0; }
@media (max-width: 1023px) {
  .row_list{width: 80%;}
  .row_list .col_list{margin-left:0;width: 100%;}
}
</style>

    <div class="row no-gutters justify-content-start row_list">
      <% @foods.each do |food| %>
        <div class="col_list col_img p-4 <%= 'food' if food.quantity == 0 %>">
          <div>
            <%= link_to User.find(food.user_id).name, store_food_path(food.user_id) %>
            <%= image_tag food.avatar.variant(resize: '300x300!'), :class => "img_list" if food.avatar.attached?%>
            <span class="off"><%= (food.origin_price - food.discount_price)*100/(food.origin_price) %>% off</span>
          </div>
          <div>
            <img src="<%=food.picture%>" alt="" class="img_list" style="margin-bottom:30px">
          </div>          
          <div class="col col-lg-12 col-md-12 col-sm-12 col-12 col_info p-2">
            <h3><%= food.title %></h3>
            <div class="list_price">
              <strong>$<%= food.discount_price %></strong>
              <del>原價<%= food.origin_price %></del>
            </div>
            <p>數量：<%= food.quantity %></p>
            <p>地點：<%= food.address %></p>  <!-- #到時候在修正成只顯示區域 -->
            <p>領取時間：<%= I18n.l(food.pickup_time, formats: :default) %> ～ <%= food.endup_time.strftime("%H:%M") %></p>
          </div>
          <div class="col col-lg-12 col-md-12 col-sm-12 col-12 col_btn p-2 text-right">
            <% if food.user == current_user %>
              <%= link_to "編輯", edit_food_path(food.id),class:'btn btn-warning btn_foods_list' %>
              <%= link_to "刪除", food_path(food.id), method:'delete', class:'btn btn-danger btn_foods_list', data: {confirm: '確定要刪除嗎？'} %> 
            <% end %>
            <%= link_to "MORE", food_path(food.id), class:'btn btn-dark' %>
          </div>
        </div>   
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/frontend/footer' %>

