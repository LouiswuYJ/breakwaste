<h1>歷史ＰＯ文紀錄</h1>

<% @foods.each do |food| %>
  <ul>
    <li>
      <div>
      <div class="container">
        <div class="row">
          <div class="col col-lg-3">
            <%= image_tag food.avatar.variant(resize: '300x300') if food.avatar.attached? %> <!-- 圖片大小從這改 -->
          </div>
        </div>
      </div>
      名稱:<%= food.title %>
      地區:<%= food.address %>   <!-- #到時候在修正成只顯示區域 -->
      數量:<%= food.quantity %>
      可領取時間:<%= I18n.l(food.pickup_time, formats: :default) %> ～ <%= I18n.l(food.pickup_time, formats: :default) %>
      原始價:<%= food.origin_price %>
      救援價:<%= food.discount_price %>
      <%= link_to "重新PO文", new_food_path("food_id" => food.id), class: 'btn btn-xs btn-warning' %>
      <%= link_to "刪除", food_path(food.id), method:'delete', class:'btn btn-danger', data: {confirm: '確定要刪除嗎？'} %>  
    </li>
  </ul>
<% end %>