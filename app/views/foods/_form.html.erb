<% if food.errors.any? %>
  <ul>
    <% food.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<fieldset>
  <%= form_for(food) do |form| %>

  <div class="form-group">
    <%= form.label :avatar, '檔案上傳' %>
    <%= form.file_field :avatar%>
  </div>

  <div class="form-group">
    <%= form.label :title, '食物名稱:' %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :address, '地址:' %>
    <%= form.text_field :address,value: current_user.address %>
  </div>

  <div class="form-group">
    <%= form.label :phone, '電話:'%>
    <%= form.text_field :phone ,value: current_user.phone %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, ' 數量:' %>
    <%= form.select :quantity, options_for_select(["請選擇數量", [*1..30]].flatten, selected: form.object.quantity), class: 'genForm_dropBox' %>
  </div>

    <div class="form-group">
    <%= form.label :origin_price, '原價:' %>
    <%= form.text_field :origin_price %>
  </div>

  <div class="form-group">
    <%= form.label :discount_price, '救援價:' %>
    <%= form.text_field :discount_price %>
  </div>

  <div class="form-group">
    <%= form.label :pickup_time, '領取時間:' %>
    <%= form.datetime_field :pickup_time, default: form.object.pickup_time %>
  </div>

  <div class="form-group">
    <%= form.label :endup_time, '結束時間:' %>
    <%= form.datetime_field :endup_time, default: form.object.endup_time %>
  </div>

    <div class="form-group">
     <%= form.label :description, '描述:' %>
     <%= form.text_area :description %>
   </div>

    <%= form.submit class:'btn btn-danger' %>   <!-- 再來想怎麼在不同頁面改按鈕名稱 -->
    <%= link_to "取消", foods_path, class: 'btn btn-success' %>
  <% end %>
  
  </fieldset>

