<% if food.errors.any? %>
  <ul class="error">
    <% food.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="section_form">
  <%= form_for(food) do |form| %>
    <div class="container-fluid container_form">
      <div class="row row_form ">
  
      <div class="col col-lg-6 col-md-10 col-sm-10 col-10 col_form">

        <div class="form-group">
          <%= form.label :avatar, '檔案上傳', class:'label_form'%>
          <%= form.file_field :avatar, class:'input_img' %>
        </div>

        <div class="form-group">
          <%= form.label :title, '食物名稱：', class:'label_form' %>
          <%= form.text_field :title, class:'input_form col-12' %>
        </div>

        <div class="form-group">
          <%= form.label :address, '地址：', class:'label_form' %>
          <%= form.text_field :address,value: current_user.address, class:'input_form' %>
        </div>

        <div class="form-group">
          <%= form.label :phone, '電話：', class:'label_form' %>
          <%= form.text_field :phone ,value: current_user.phone, class:'input_form' %>
        </div>

        <div class="form-group">
          <%= form.label :quantity, ' 數量：', class:'label_form' %>
          <div class="select_form">
            <%= form.select :quantity, options_for_select(["請選擇數量", [*1..30]].flatten, selected: form.object.quantity), class: 'genForm_dropBox' %>
          </div>
        </div>

          <div class="form-group">
          <%= form.label :origin_price, '原價：', class:'label_form' %>
          <%= form.text_field :origin_price, class:'input_form' %>
        </div>

        <div class="form-group">
          <%= form.label :discount_price, '救援價：', class:'label_form' %>
          <%= form.text_field :discount_price, class:'input_form' %>
        </div>

        <div class="form-group">
          <%= form.label :pickup_time, '領取時間：', class:'label_form' %>
          <%= form.datetime_field :pickup_time, default: form.object.pickup_time, class:'input_form' %>
        </div>

        <div class="form-group">
          <%= form.label :endup_time, '結束時間：', class:'label_form' %>
          <%= form.datetime_field :endup_time, default: form.object.endup_time, class:'input_form' %>
        </div>

          <div class="form-group">
          <%= form.label :description, '描述：', class:'label_form' %>
          <%= form.text_area :description %>
        </div>
        
      </div>
      <div class="col col-lg-8 col-md-10 col-sm-10 col-10 col_form text-center p-5">
        <% if params[:controller] == 'foods' && params[:action] == 'new' %>
          <%= form.submit "新增",class:'btn btn-danger btn_style' %> 
        <% else %> 
          <%= form.submit "儲存",class:'btn btn-danger btn_style' %> 
        <% end %>
          <%= link_to "取消", foods_path, class: 'btn btn-success btn_style' %>

      </div>
    </div>
      <!-- 再來想怎麼在不同頁面改按鈕名稱 -->
  <% end %>
</div>
<%= render 'shared/frontend/footer' %>

