<% flash.each do |key, value| %>
  <div class="alert alert-warning <%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<div class="container-fluid p-0">
  <div class="row no-gutters row_payment justify-content-center">
    <div class="col col-lg-8 col-md-10 col-sm-10 col-10 col_payment py-5">
      <h1 style="font-size:50px">付款金額 <%= @order.total_price %> 元</h1>

      </div>
        <div class="col col-lg-8 col-md-10 col-sm-10 col-10 col_payment_btn py-5 text-center">
          <div class="col col-10 m-auto">
            <%= form_with(url: transaction_order_path(@order), local: true) do |form| %>
              <div id="payment-form"></div>
              <input type="submit" value="結帳" class="btn btn-danger btn_style mt-5 payment-btn">
            <% end %>
            <script src="https://js.braintreegateway.com/js/braintree-2.32.1.min.js"></script>
            <script>
            var clientToken = "<%= @token %>";
            braintree.setup(clientToken, "dropin", {
            container: "payment-form"
            });
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/frontend/footer' %>
