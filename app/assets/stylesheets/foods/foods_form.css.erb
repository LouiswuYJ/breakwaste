.create_form{
  padding: 30px;
  text-align: center;
  <%# background-image: url(/assets/header04.jpg); -------更改成下方格式 %> 
  background-image: url(<%= asset_path 'header04.jpg' %>);
}
.container_form{
  background-color: rgb(255,255,255);
}
.row_form{
  padding: 80px 0;
}
.col_form{
  width: 100%;
  margin: auto;
  background-color: #fff;
}
.label_form{
  font-size: 24px;
}
.input_img{
  color: #aaa;
  border-radius: 10px;
}
.input_form{
  width: 100%;
  font-size: 20px;
  padding: 10px;
  outline: none;
  padding-left: 15px;
  border-radius: 5px;
  border: 4px solid #ccc;
  background-color: #fff;
}
div.select_form{
  width: 100%;
  outline: none;
  padding: 10px;
  padding-left: 10px;
  border-radius: 5px;
  border: 4px solid #ccc;
  background-color: #fff;
}
.select_form > select{
  width: 100%;
  outline: none;
  padding-left: 10px;
  border: none;
  background-color: #fff;
}
textarea{
  width: 100%;
  outline: none;
  padding: 10px;
  padding-left: 15px;
  border-radius: 5px;
  border: 4px solid #ccc;
  background-color: #fff;
}
.btn_form{
  width: 150px;
  height: 40px;
  border-radius: 5px;
}